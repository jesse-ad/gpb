%% -*- erlang -*-
{require_otp_vsn, ".*"}.


%% -*- erlang -*-
{cover_enabled, true}.
{cover_print_enabled, true}.

{erl_opts, [
  debug_info,
  %% warn_export_all,
  %% warn_untyped_record,
  inline_list_funcs,
  warn_deprecated_function,
  warn_export_vars,
  warn_obsolete_guard,
  warn_shadow_vars,
  warn_unused_function,
  warn_unused_import,
  warnings_as_errors
]}.

{erl_opts, [debug_info, {src_dirs, ["src", "test"]}]}.
{deps, []}.

{xref_warnings, false}.
{xref_checks, [
  undefined_function_calls,
  undefined_functions,
  locals_not_used,
  deprecated_function_calls,
  deprecated_functions
]}.